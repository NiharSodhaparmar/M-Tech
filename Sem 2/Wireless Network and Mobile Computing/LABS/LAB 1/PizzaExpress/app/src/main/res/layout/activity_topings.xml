<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Topings">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#d3d3d3"
            tools:ignore="MissingConstraints">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:text="Select Size"
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_marginLeft="20dp"
                tools:ignore="MissingConstraints"/>
        </FrameLayout>


        <RadioGroup
            android:id="@+id/idSizeRG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/idTopping"
            app:layout_constraintStart_toStartOf="@+id/idTopping"
            tools:ignore="MissingConstraints"
            android:layout_marginLeft="20dp">

            <RadioButton
                android:id="@+id/idSizeRBSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="radioClicked"
                android:text="Small - 9$"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/idSizeRBMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="radioClicked"
                android:text="Medium - 10$"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/idSizeRBLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="radioClicked"
                android:text="Large - 11$"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </RadioGroup>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#d3d3d3"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="30dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:text="Select Toppings"
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_marginLeft="20dp"
                tools:ignore="MissingConstraints"/>
        </FrameLayout>


        <CheckBox
            android:id="@+id/idToppingCBSpinach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onCheckboxClicked"
            android:text="Spinach - 2$"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/idToppingCBCheese"
            app:layout_constraintTop_toBottomOf="@+id/idToppingCBCheese"
            android:layout_marginLeft="20dp"/>

        <CheckBox
            android:id="@+id/idToppingCBCheese"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onCheckboxClicked"
            android:text="Cheese - 2$"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/idTopping"
            app:layout_constraintTop_toBottomOf="@+id/idTopping"
            android:layout_marginLeft="20dp"/>

        <CheckBox
            android:id="@+id/idToppingCBPepperoni"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onCheckboxClicked"
            android:text="Pepperoni - 2$"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/idToppingCBSpinach"
            app:layout_constraintTop_toBottomOf="@+id/idToppingCBSpinach"
            android:layout_marginLeft="20dp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#d3d3d3"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="30dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:text="Total Price :"
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_marginLeft="20dp"
                tools:ignore="MissingConstraints"
                android:id="@+id/idTotalPrice"/>
        </FrameLayout>

        <Button
            android:id="@+id/next_btn_id"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="50dp"
            android:text="Next"
            android:textSize="25dp"
            android:textStyle="bold" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>